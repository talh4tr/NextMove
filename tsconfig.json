{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "lib": ["es2017"],
    "jsx": "react-native",
    "moduleResolution": "node",
    "strict": true,
    "noEmit": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["react", "react-native"]
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
